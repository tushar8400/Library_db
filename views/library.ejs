<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Home</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f9fb;
      text-align: center;
      padding: 20px;
    }

    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 10px;
      border: 1px solid #ddd;
    }

    th {
      background: #0066cc;
      color: white;
    }

    a.btn, button {
      background: #0066cc;
      color: white;
      padding: 8px 15px;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      margin: 5px;
    }

    a.btn:hover, button:hover {
      background: #004d99;
    }

    .addbtn {
      margin-left: 1030px;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1>ðŸ“š Library Management System</h1>
  </div>

  <div class="addbtn">
    <a href="/library/add" class="btn">âž• Add Book</a>
  </div>

  <table>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Author</th>
      <th>Available Copies</th>
      <th>Action</th>
    </tr>

    <% books.forEach(book => { %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.available_copies %></td>
        <td>
          <a href="/library/<%= book.id %>/edit"><button>Edit</button></a>
          <form action="/library/<%= book.id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
